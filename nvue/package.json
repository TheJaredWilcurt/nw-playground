    "nw-builder": "^3.5.4",
    "nw-vue-devtools": "^1.1.1"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nwbuild -r .",
    "build": "cross-env NODE_ENV=production node build/build.js"
  }
