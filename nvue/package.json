  "main": "index.html",
  "chromium-args": "--enable-logging=stderr --allow-file-access-from-files --load-extension='./node_modules/nw-vue-devtools/extension'",
  "window": {
    "id": "webkitty-nvue",
    "title": "Webkitty NVUE",
